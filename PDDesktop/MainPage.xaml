    	<TextBlock x:Name="DataFileContent" HorizontalAlignment="Left" Margin="32,215,0,0" TextWrapping="Wrap" Text="No File Selected" VerticalAlignment="Top" Height="543" Width="173"/>
    	<TextBlock HorizontalAlignment="Left" Margin="32,180,0,0" TextWrapping="Wrap" Text="File Contents:" VerticalAlignment="Top" Height="35" Width="173" FontSize="18.667"/>
    	<TextBlock HorizontalAlignment="Left" Margin="32,36,0,0" TextWrapping="Wrap" Text="PDDesktop" VerticalAlignment="Top" Height="77" Width="325" FontSize="64" Foreground="#FF36B2EC"/>

    </Grid>
</Page>
