<Page
    x:Class="PDDesktop.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDDesktop"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
    	<Button x:Name="ChooseDataFileBtn" Content="Choose Data File" HorizontalAlignment="Left" Margin="32,133,0,0" VerticalAlignment="Top" Height="42" Width="173" Click="ChooseDataFileBtn_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,36,0,0" TextWrapping="Wrap" Text="PDDesktop" VerticalAlignment="Top" Height="77" Width="325" FontSize="64" Foreground="#FF36B2EC"/>
        <TextBlock x:Name="DataFileContent" HorizontalAlignment="Left" Margin="32,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="540" Width="173" Text="No file selected"/>
        <TextBlock HorizontalAlignment="Left" Margin="32,180,0,0" TextWrapping="Wrap" Text="File Contents:" VerticalAlignment="Top" Height="19" Width="149" FontSize="16"/>

    </Grid>
</Page>
